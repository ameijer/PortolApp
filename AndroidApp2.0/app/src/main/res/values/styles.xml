<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/reflection_cropped_logo_low</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Splash" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/content_music</item>-->
        <!--<item name="android:background">@layout/splash_screen</item>-->
        <!--<item name="android:windowBackground">@drawable/reflection_cropped_logo_low</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="PanelButton" parent="android:Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginLeft">100dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:textStyle">normal</item>
        <item name="android:color">@color/headerText</item>
    </style>
</resources>