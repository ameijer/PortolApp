<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="650dp"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="650dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/portolGrid_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:onClick="backClicked"
                android:src="@drawable/fast_backwards" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deepgreen"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/player_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Active players"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <GridView

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/player_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="154dp"
            android:gravity="center"

            android:numColumns="auto_fit"
            android:paddingBottom="10dp"
            android:stretchMode="columnWidth">


        </GridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_clickable"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <!--<ImageView-->
            <!--android:id="@+id/imageView2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/mobile"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_gravity="center|left"-->

            <!--/>-->

            <TextView
                android:id="@+id/portolHere"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Add player"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>