<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="650dp"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="650dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/portolGrid_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:onClick="backClicked"
                android:src="@drawable/fast_backwards" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deepgreen"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/portol_instant_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"


                    android:layout_gravity="left|center_vertical"
                    android:text="Cost: 40c"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/wallet"

                    />

                <Button
                    android:id="@+id/portolWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"


                    android:layout_gravity="right|center_vertical"
                    android:text="Wallet: 3.40"
                    android:textSize="30sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/guide_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/buy_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap the the Portol you want to open."
                android:textColor="@color/white"
                android:textSize="24sp"

                />


        </LinearLayout>

        <GridView

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/portol_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="154dp"
            android:gravity="center"

            android:numColumns="auto_fit"
            android:paddingBottom="10dp"
            android:stretchMode="columnWidth">


        </GridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_clickable"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:src="@drawable/mobile"

                />

            <TextView
                android:id="@+id/portolHere"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Add a Platform"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


