<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/live_category_backdrop"
    android:layout_width="150dp"
    android:layout_height="218dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/live_category_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/icn_2" />

    <LinearLayout
        android:id="@+id/textHolder"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/seaBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/live_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/live_category_subscribers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="1,000,000 subscribers"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>