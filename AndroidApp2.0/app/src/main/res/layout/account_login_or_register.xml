<?xml version="1.0" encoding="utf-8" ?>
<io.codetail.widget.RevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/userfield"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/edittext_rounded_states"
        android:gravity="center"
        android:hint="username" />

    <EditText
        android:id="@+id/passfield"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/edittext_rounded_states"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/emailfield"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/edittext_email"
        android:gravity="center"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColor="@color/portolRegister" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/portolLogin"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/submit_rounded_left"
            android:text="Login"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/portolRegister"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/submit_rounded_right"
            android:text="Register"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</io.codetail.widget.RevealLinearLayout>